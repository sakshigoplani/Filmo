<% if @flag==1 %>
<%= will_paginate @movies %>
<h1>Listing Movies</h1>
<br>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Poster url</th>
      <th>Genres</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td> <img src="<%= movie.poster_url %>" alt="HTML5 Icon" style="width:128px;height:128px;" /> </td>
        <td><%= movie.genres %></td>
        <td>$&nbsp;<%= movie.price %></td>
        <td><%= link_to 'Show', movie %></td>
<!--         <td><%= link_to 'Edit', edit_movie_path(movie) %></td> -->
<!--        <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
	<td><a href="/cart/<%=movie.id%>">Add to cart</a><td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
<p> Cannot find movie <p>
<%= link_to 'Back', movies_path %>
<% end %>
