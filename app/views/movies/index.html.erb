<p id="notice"><%= notice %></p>

<h1>Listing Movies</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Poster url</th>
      <th>Genres</th>
      <th>Year</th>
      <th>Imdb rating</th>
      <th>Length</th>
      <th>Worldwide gross</th>
      <th>Studio</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.poster_url %></td>
        <td><%= movie.genres %></td>
        <td><%= movie.year %></td>
        <td><%= movie.imdb_rating %></td>
        <td><%= movie.length %></td>
        <td><%= movie.worldwide_gross %></td>
        <td><%= movie.studio %></td>
        <td><%= movie.price %></td>
        <td><%= link_to 'Show', movie %></td>
        <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
        <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %> </td>
        <td><a href="/cart/<%= movie.id %>" > Add to Cart </a> </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Movie', new_movie_path %>